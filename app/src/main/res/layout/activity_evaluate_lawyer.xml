<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.onekeyask.lawyer.ui.act.consulting.EvaluateLawyerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_eva_lawyer"
                android:layout_width="@dimen/x88"
                android:layout_height="@dimen/x88"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x38"
                android:layout_marginBottom="@dimen/x36"
                android:src="@drawable/ic_member_avatar"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="0.1dp" />

            <TextView
                android:id="@+id/tv_name_eva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/civ_eva_lawyer"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginTop="@dimen/x40"
                android:textSize="@dimen/x32"
                android:textColor="@color/black"
                android:text="张晓" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x24"
                android:textSize="@dimen/x28"
                android:textColor="@color/blackSec_"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_name_eva"
                android:layout_toRightOf="@id/tv_name_eva"
                android:text="律师"/>

            <TextView
                android:id="@+id/tv_skilled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/civ_eva_lawyer"
                android:layout_marginLeft="@dimen/x24"
                android:layout_below="@id/tv_name_eva"
                android:layout_marginTop="@dimen/x14"
                android:text="专业领域：交通事故、合同纠纷、劳动纠纷"
                android:textColor="@color/grey"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/viewDivider" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40"
            android:layout_marginLeft="@dimen/x30"
            android:textSize="@dimen/x28"
            android:textColor="@color/blackTopic"
            android:text="您对律师的服务满意吗？" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x24"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_eva_1"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/x64"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/tag_select"
                    android:gravity="center"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_eva_1"
                        android:layout_width="@dimen/x34"
                        android:layout_height="@dimen/x34"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/satisfied_v_c" />

                    <TextView
                        android:id="@+id/tv_eva_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="10dp"
                        android:text="很满意"
                        android:textColor="@color/white" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_eva_2"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/x64"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/gray_un_four"
                    android:gravity="center"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_eva_2"
                        android:layout_width="@dimen/x34"
                        android:layout_height="@dimen/x34"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/satisfied" />

                    <TextView
                        android:id="@+id/tv_eva_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="10dp"
                        android:text="满意"
                        android:textColor="@color/grey" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_eva_3"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/x64"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/gray_un_four"
                    android:gravity="center"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/iv_eva_3"
                        android:layout_width="@dimen/x34"
                        android:layout_height="@dimen/x34"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/satisfied_n" />

                    <TextView
                        android:id="@+id/tv_eva_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="10dp"
                        android:text="不满意"
                        android:textColor="@color/grey" />

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x60"
            android:layout_marginLeft="@dimen/x30"
            android:textSize="@dimen/x28"
            android:textColor="@color/blackTopic"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginBottom="@dimen/x26"
            android:text="选择合适的标签(多个标签用空格分隔)" />

        <EditText
            android:id="@+id/et_tag_eva"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x66"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/gray_un_four"
            android:enabled="true"
            android:gravity="center_vertical"
            android:hint="单行输入"
            android:inputType="textMultiLine"
            android:maxLines="1"
            android:minLines="1"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x24">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_gravity="center_vertical"
                android:src="@drawable/often_label" />

            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:textSize="@dimen/x24"
                android:textColor="@color/blackModule"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="常用标签" />
        </LinearLayout>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/tag_flow"
            app:max_select="-1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">




        </com.zhy.view.flowlayout.TagFlowLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:text="给律师一些评价吧！" />

        <EditText
            android:id="@+id/et_eva_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x24"
            android:layout_marginBottom="@dimen/x50"
            android:background="@drawable/gray_un_four"
            android:enabled="true"
            android:gravity="top"
            android:hint="欢迎提出更多意见或建议"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minHeight="@dimen/x146"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textSize="@dimen/x24" />

        <TextView
            android:gravity="center"
            android:id="@+id/btn_mind_submit"
            android:layout_width="@dimen/x690"
            android:layout_height="@dimen/x100"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/full_green_ten"
            android:text="提交"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


</ScrollView>
