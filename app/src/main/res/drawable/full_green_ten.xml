    <!-- pressed-->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#48af64" />
            <stroke
                android:width="1dp"
                android:color="#48af64" />
            <corners android:radius="@dimen/x8" />
        </shape>
    </item>

    <!-- disabled-->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/baseColor" />
            <stroke
                android:width="1dp"
                android:color="@color/baseColor" />
            <corners android:radius="@dimen/x8" />
        </shape>
    </item>

    <!-- default-->
    <item>
        <shape>
            <solid android:color="@color/baseColor" />
            <stroke
                android:width="1dp"
                android:color="@color/baseColor" />
            <corners android:radius="@dimen/x8" />
        </shape>
    </item>
</selector>