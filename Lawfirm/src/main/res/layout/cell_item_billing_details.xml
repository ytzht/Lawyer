<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?listChoiceBackgroundIndicator"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+300"
                android:textColor="@color/burro_primary_ext"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="16dp"
                android:layout_marginLeft="6dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_r_g"/>
        </LinearLayout>


        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户注册" />

        <TextView
            android:id="@+id/detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_title"
            android:layout_marginTop="4dp"
            android:text="2017-08-01 20:18"
            android:textColor="@color/blackHint" />


    </RelativeLayout>
</LinearLayout>