<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onekeyask.lawfirm.ui.act.user.SkillAreaActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_can"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="7dp">

    </android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/title_skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="注册引导"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_skill"
        android:layout_marginTop="8dp"
        android:text="请选择您的擅长领域"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/next_step_one"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/full_green_four"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:layout_above="@+id/next_step_one">
        <TextView
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#666666"/>
        <TextView
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/3"
            android:textColor="#666666"/>
    </LinearLayout>
</RelativeLayout>
