<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onekeyask.lawyer.ui.act.me.BankCardTypeActivity">

    <LinearLayout
        android:id="@+id/ll_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="银行卡类别"
            android:textColor="#343434"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/divider" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_save"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="  储蓄卡"
                android:textColor="@color/burro_primary_ext"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/divider" />

            <RadioButton
                android:id="@+id/rb_trust"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="  信用卡"
                android:textColor="@color/burro_primary_ext"
                android:textSize="16sp"  />

        </RadioGroup>






    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@id/ll_type"
        android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/llyt_tin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tin_letter"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="#EBEBEB"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="A"
            android:textSize="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e3e4e5" />
    </LinearLayout>


    <com.onekeyask.lawyer.utils.sort.SideBar
        android:id="@+id/sb_sidebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />
    </FrameLayout>

</RelativeLayout>
