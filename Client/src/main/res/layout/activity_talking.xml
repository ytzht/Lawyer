<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.onekeyask.lawyer.ui.act.consulting.TalkingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/talk_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:navigationIcon="@drawable/arrow_l_w"
        android:theme="@style/ToolbarPopupTheme"
        app:navigationIcon="@drawable/arrow_l_w">

        <TextView
            android:id="@+id/talk_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:text="标题" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/talk_toolbar"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_ask_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_talking"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_input_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/bottom_bar_top_shadow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x92"
                    android:background="@color/input_bg">

                    <EditText
                        android:id="@+id/et_send_msg"
                        android:layout_width="0dp"
                        android:textSize="@dimen/x30"
                        android:textColor="@color/blackTopic"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/tv_send_msg"
                        android:layout_width="@dimen/x110"
                        android:layout_height="@dimen/x60"
                        android:layout_margin="6dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/talking_send"
                        android:gravity="center"
                        android:textSize="@dimen/x30"
                        android:text="发送"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/bottom_bar_top_shadow" />

            <LinearLayout
                android:id="@+id/ll_bottom_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:visibility="gone"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/iv_input_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x48"
                        android:layout_marginTop="@dimen/x28"
                        android:src="@drawable/keyboard_c" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x20"
                        android:layout_marginBottom="@dimen/x30"
                        android:textColor="@color/blackModule"
                        android:gravity="center"
                        android:text="书写"
                        android:textSize="@dimen/x24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iv_voice_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x48"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/x28"
                        android:src="@drawable/voice" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x20"
                        android:layout_marginBottom="@dimen/x30"
                        android:textColor="@color/blackModule"
                        android:gravity="center"
                        android:text="语音"
                        android:textSize="@dimen/x24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iv_photo_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x48"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/x28"
                        android:src="@drawable/pic" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x20"
                        android:layout_marginBottom="@dimen/x30"
                        android:textColor="@color/blackModule"
                        android:gravity="center"
                        android:text="图片"
                        android:textSize="@dimen/x24" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iv_money_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x48"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/x28"
                        android:src="@drawable/heart_b" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x20"
                        android:layout_marginBottom="@dimen/x30"
                        android:textColor="@color/blackModule"
                        android:gravity="center"
                        android:text="送心意"
                        android:textSize="@dimen/x24" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iv_share_bottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x48"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/x28"
                        android:src="@drawable/forward" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x20"
                        android:layout_marginBottom="@dimen/x30"
                        android:textColor="@color/blackModule"
                        android:gravity="center"
                        android:text="转发"
                        android:textSize="@dimen/x24" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_eva_comp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/bottom_bar_top_shadow" />

                <LinearLayout
                    android:id="@+id/ll_give_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/rl_give_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/org_un_bg"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/heart_b_c_o" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="  略表心意"
                                android:textColor="@color/baseOrange"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_again"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/tag_select_green"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/tv_favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="再次咨询"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff000000" />

        <com.onekeyask.lawyer.utils.photo.PhotoView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


</RelativeLayout>
