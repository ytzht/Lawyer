<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?listChoiceBackgroundIndicator"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="18dp"
                android:text="132*******7"
                android:textColor="@color/grey_"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/tv_tag_now"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle_type_bg"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="离婚诉讼"
                android:textColor="@color/burro_primary_ext"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv_content_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginLeft="15dp"
                android:textColor="#585858"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:text="您好，我和我妻子在结婚前买的房子，现在我们离婚，我们的房子..."
                android:textSize="15dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_law"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="13dp"
                android:src="@drawable/ic_member_avatar"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="0.1dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp" />

            <TextView
                android:id="@+id/tv_law_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:textSize="14dp"
                android:layout_toRightOf="@id/iv_law"
                android:text="赵谢杰" />

            <TextView
                android:id="@+id/lawyer_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_law_name"
                android:text="北京大成律师事务所"
                android:textColor="@color/blackSec_"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/praise_c" />

            <TextView
                android:id="@+id/count_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:textColor="@color/blackSec_"
                android:layout_toLeftOf="@id/iv_like"
                android:paddingTop="4dp"
                android:textSize="12dp"
                android:text="39" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>