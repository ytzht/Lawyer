<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/viewDivider"
    android:layout_height="match_parent"
    tools:context="com.onekeyask.lawyer.ui.act.me.MyWalletActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/burro_primary_ext">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="余额账户（元）"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wallet_ye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            tools:text="345.43" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="12dp"
        android:id="@+id/recharge"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="充值"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_r_g"
            android:layout_height="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="12dp"
        android:id="@+id/withdrawal"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提现"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_r_g"
            android:layout_height="20dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="12dp"
        android:id="@+id/card_manage"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="银行卡管理"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_r_g"
            android:layout_height="20dp" />
    </RelativeLayout>


</LinearLayout>
