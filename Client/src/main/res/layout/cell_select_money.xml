<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_select_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="请选择答谢金额" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_circle_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/select_money_bg"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_2_mind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_2_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:text="元"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_circle_4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/unselect_money_bg"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_4_mind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="4"
                        android:textColor="@color/burro_primary_ext"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_4_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:text="元"
                        android:textColor="@color/burro_primary_ext"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_circle_6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/unselect_money_bg"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_6_mind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="6"
                        android:textColor="@color/burro_primary_ext"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_6_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:text="元"
                        android:textColor="@color/burro_primary_ext"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_circle_8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/unselect_money_bg"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_8_mind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="8"
                        android:textColor="@color/burro_primary_ext"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_8_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:text="元"
                        android:textColor="@color/burro_primary_ext"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_circle_more"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/unselect_money_bg"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/tv_more_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textColor="@color/burro_primary_ext" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>