<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewDivider"
    android:orientation="vertical"
    tools:context="com.onekeyask.lawyer.ui.act.me.RechargeActivity">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="充值余额"/>

    <EditText
        android:background="@drawable/ext_bg_zero"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="请输入你要充值的金额"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="请选择支付方式"/>

        <RelativeLayout
            android:id="@+id/rl_ali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?listChoiceBackgroundIndicator">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@drawable/alipay" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="15dp"
                android:text="支付宝支付"
                android:textColor="@color/black_"
                android:textSize="16dp" />


            <ImageView
                android:id="@+id/cb_ali"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                android:src="@drawable/select_c" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="35dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:text="推荐支付宝账号使用"
                android:textColor="@color/blackSec_"
                android:textSize="12dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/rl_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?listChoiceBackgroundIndicator">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@drawable/wechart_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignTop="@+id/imageView2"
                android:text="微信"
                android:textColor="@color/black_"
                android:textSize="16dp" />


            <ImageView
                android:id="@+id/cb_wx"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                android:src="@drawable/select" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="35dp"
                android:layout_toLeftOf="@id/cb_wx"
                android:text="推荐安装微信5.0及以上的版本用户使用"
                android:textColor="@color/blackSec_"
                android:textSize="12dp" />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewDivider">

        <TextView
            android:gravity="center"
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:background="@drawable/full_orange_ten"
            android:text="确认支付"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>
