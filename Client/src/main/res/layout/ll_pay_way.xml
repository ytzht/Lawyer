<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="请选择支付方式" />


        <RelativeLayout
            android:id="@+id/rl_ali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?listChoiceBackgroundIndicator">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@drawable/alipay" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="15dp"
                android:text="支付宝支付"
                android:textColor="@color/black_"
                android:textSize="16dp" />


            <ImageView
                android:id="@+id/cb_ali"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                android:src="@drawable/select_c" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="35dp"
                android:text="推荐支付宝账号使用"
                android:textColor="@color/blackSec_"
                android:textSize="12dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/rl_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?listChoiceBackgroundIndicator">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@drawable/wechart_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_alignTop="@+id/imageView2"
                android:text="微信"
                android:textColor="@color/black_"
                android:textSize="16dp" />


            <ImageView
                android:id="@+id/cb_wx"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                android:src="@drawable/select" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="35dp"
                android:layout_toLeftOf="@id/cb_wx"
                android:text="推荐安装微信5.0及以上的版本用户使用"
                android:textColor="@color/blackSec_"
                android:textSize="12dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/rl_ye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?listChoiceBackgroundIndicator">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@drawable/balance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="66dp"
                android:text="余额"
                android:textColor="@color/black_"
                android:textSize="16dp" />


            <ImageView
                android:id="@+id/cb_ye"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                android:src="@drawable/select" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="110dp"
                android:layout_toLeftOf="@id/cb_ye"
                android:text="(可用余额12.0)"
                android:textColor="#6f6f6f"
                android:textSize="14dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/viewDivider">

            <LinearLayout
                android:id="@+id/notice_ll"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="买前必读：\n1、您可根据案件类型复杂程度购买图文咨询，如果时间或次数超时，只能再次购买进行图文咨询；\n2.当订单产生，根据您消费的金额赠送50积分；\n3.如有什么疑问您可以拨打客服电话，号码是01082668266。"
                    android:textSize="12sp" />
                <!--String s = "恭喜您获得 <font color='#dc5145'><big><big>" + taskIntegral + "</big></big></font> 积分";-->
                <!--sign_get.setText(Html.fromHtml(s));-->

            </LinearLayout>

            <TextView
                android:id="@+id/btn_pay"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="50dp"
                android:layout_below="@id/notice_ll"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/full_orange_ten"
                android:gravity="center"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>