<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_corner4"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="1dp">

    <TextView
        android:id="@+id/edit_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_light"
        android:textSize="0sp" />
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="15dp"
        android:layout_height="43dp"
        android:src="@drawable/close"
        android:layout_gravity="end"
        />

    <EditText
        android:id="@+id/edit_dialog_exittext"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@drawable/gray_un_zero"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textSize="12dp" />

    <View
        android:id="@+id/edit_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="2dp"
        android:background="@color/black_light"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_dialog_leftbtn"
            android:layout_width="115dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:background="@drawable/grey_un_four"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/blackModule"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/edit_dialog_rightbtn"
            android:layout_width="115dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/full_green_four"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="0dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16dp"

            />


    </LinearLayout>


</LinearLayout>