<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/com_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="132*****117"
            android:textColor="#343434"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/com_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="6dp"
            android:textColor="#8a8a8a"
            android:text="03月08日"/>

        <TextView
            android:id="@+id/com_type"
            android:text="打赏咨询"
            android:textSize="11sp"
            android:gravity="center"
            android:background="@drawable/edit_text_bg"
            android:textColor="@color/burro_primary_ext"

            android:layout_width="64dp"
            android:layout_height="19dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/com_txt"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:textColor="#343434"
        tools:text="张律师非常专业，很耐心，非常感谢！"
        />
    <TextView
        android:id="@+id/com_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:textColor="#6f6f6f"
        android:textSize="14sp"
        android:padding="6dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/comment_bg"
        android:layout_marginLeft="16dp"
        android:text="每年农民工讨薪问题非常严重啊啊啊啊啊，每年农民工讨薪问题非常严重啊啊啊啊啊，每年农民工讨薪问题非常严重啊啊啊啊啊，每年农民工讨薪问题非常严重啊啊啊啊啊，每年农民工讨薪问题非常严重啊啊啊啊啊。"/>


</LinearLayout>