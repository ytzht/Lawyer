<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewDivider"
    android:orientation="vertical"
    tools:context="com.onekeyask.lawyer.ui.act.me.PwdAuthActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="请输入您的手机验证码"
        android:textColor="@color/blackModule"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center">


        <EditText
            android:id="@+id/et_pwd_auth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="numberPassword"
            android:maxLength="16"
            android:maxLines="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_auth_code"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ext_unselect"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/burro_primary_ext"
            android:textSize="13sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/pwd_auth_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/full_green_four"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
