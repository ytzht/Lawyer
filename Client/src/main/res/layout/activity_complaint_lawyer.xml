<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onekeyask.lawyer.ui.act.consulting.ComplaintLawyerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/viewDivider"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_law"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textColor="#343434"
        android:textSize="16sp"
        tools:text="张小平律师的图文咨询" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="140dp"
        android:paddingBottom="18dp"
        android:paddingLeft="16dp"
        android:orientation="vertical"
        android:paddingRight="16dp"
        android:paddingTop="18dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题描述："
            android:paddingBottom="10dp"
            android:textColor="#343434"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="500"
            android:background="@null"
            android:hint="请输入投诉内容(限500字)"
            android:textSize="16sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/add_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/add_pic" />

        <TextView
            android:id="@+id/tv_add_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/add_pic"
            android:layout_centerVertical="true"
            android:text="添加图片"
            android:textColor="@color/blackModule"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_add_pic"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请留下您的手机号，以便于我们联系您"
            android:textColor="@color/blackModule"
            android:padding="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="请输入电话号"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:maxLength="11"
            android:background="@null"
            android:inputType="phone"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/submit_complaint"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/full_green_four"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
