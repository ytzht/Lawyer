<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/dis_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="?listChoiceBackgroundIndicator"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dis_type"
                android:layout_width="72dp"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/discover_tag"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="离婚诉讼" />

            <TextView
                android:id="@+id/dis_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="6dp"
                android:minHeight="75dp"
                android:textColor="#626262"
                android:textSize="16sp"
                tools:text="关键时现场艰苦维持现场关键时场关键时苦维持现场艰苦维持现场场艰苦维持现场" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dis_img"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/ic_member_avatar" />

                <TextView
                    android:id="@+id/dis_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="#6f6f6f"
                    android:textSize="14sp"
                    tools:text="赵谢杰" />

                <TextView
                    android:id="@+id/dis_office"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:textColor="#8e8e8e"
                    android:textSize="12sp"
                    tools:text="北京大成律师事务所" />

                <TextView
                    android:id="@+id/dis_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="3dp"
                    android:text="33"
                    android:textColor="#aeaeae"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/dis_praise"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/praise_c" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>