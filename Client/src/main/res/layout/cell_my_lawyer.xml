<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="?listChoiceBackgroundIndicator"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/law_img"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/law_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张小平"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="   律师"
                android:textColor="@color/blackModule"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/law_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买过"
                android:textColor="@color/burro_primary_ext" />
        </LinearLayout>

        <TextView
            android:id="@+id/law_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京大成律师事务所"
            android:textColor="@color/blackModule"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>