<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?listChoiceBackgroundIndicator"
    android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/find_civ"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_member_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/find_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                tools:text="张晓平" />

            <TextView
                android:id="@+id/find_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#343434"
                android:textSize="14sp"
                tools:text="北京大成律师事务所" />

        </LinearLayout>

        <TextView
            android:id="@+id/find_special"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:textColor="#8e8e8e"
            android:textSize="13sp"
            tools:text="合同纠纷、合同纠纷、合同纠纷" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/law_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/law_tag"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:textColor="@color/burro_primary_ext"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="及时回复" />

            <TextView
                android:id="@+id/law_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/law_tag"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:textColor="@color/burro_primary_ext"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="耐心解答" />

            <TextView
                android:id="@+id/law_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/law_tag"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:textColor="@color/burro_primary_ext"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="服务速度好" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:src="@drawable/buy_user" />

            <TextView
                android:id="@+id/find_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:textColor="#aeaeae"
                android:textSize="12sp"
                tools:text="4221人购买" />

            <TextView
                android:id="@+id/find_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/org"
                android:textSize="12sp"
                tools:text="￥1元起" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>